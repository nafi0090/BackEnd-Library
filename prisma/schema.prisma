generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model book {
  id Int @id @default(autoincrement())
  code String @unique
  title String
  author String
  stock Int

  Borrowing borrowing?
  History history[]
}

model member{
  id Int @id @default(autoincrement())
  code String @unique
  name String
  penaltyEndDate DateTime?

  Borrowing borrowing[]
  History history[]
}

model borrowing {
  id Int @id @default(autoincrement())
  memberId Int
  bookId Int @unique
  borrowedDate DateTime @default(now())

  Member member @relation(fields: [memberId], references: [id])
  book book @relation(fields: [bookId], references: [id])
}

model history {
  id Int @id @default(autoincrement())
  memberId Int
  bookId Int
  borrowedDate DateTime?
  returnedDate DateTime?

  Member member @relation(fields: [memberId], references: [id])
  book book @relation(fields: [bookId], references: [id])
}